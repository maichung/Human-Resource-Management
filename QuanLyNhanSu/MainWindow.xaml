                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Image Stretch="None" Source="Resources\Icons\btnThem_white.png"></Image>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Tạo mới" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                       FontSize="16" Margin="5,0,0,0" FontWeight="Normal" ></TextBlock>
                                </Grid>
                            </Grid>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding TaoMoiCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>

                    <!-- Danh sách phòng ban -->
                    <Grid Grid.Row="1">
                        <ListView Name="listPhongBan"
                                  ItemsSource="{Binding ListPhongBan}" 
                                  SelectedItem="{Binding SelectedPhongBan, Mode=OneWayToSource}" Margin="0,10,0,0" FontSize="14">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding HienThiCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding MA_PB}" >
                                        <GridViewColumnHeader Tag="MA_PB" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="ID" Width="100">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding TEN_PB}">
                                        <GridViewColumnHeader Tag="TEN_PB" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Tên phòng ban" Width="250">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding MATRUONGPHONG_PB}">
                                        <GridViewColumnHeader Tag="MATRUONGPHONG_PB" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Mã trưởng phòng" Width="100">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding NGAYTHANHLAP_PB, StringFormat=dd/MM/yyyy}">
                                        <GridViewColumnHeader Tag="NGAYTHANHLAP_PB" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Ngày thành lập" Width="150">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding DIACHI_PB}">
                                        <GridViewColumnHeader Tag="DIACHI_PB" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Địa chỉ" Width="150">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Ứng viên -->
            <Grid Name="gridTuyenDung">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Hidden"></Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChucNangNS}" Value="6">
                                <Setter Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.RowDefinitions>
                    <RowDefinition Height="130"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Tiêu đề trang -->
                <Grid Grid.Row="0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                        <TextBlock Text="Tuyển dụng" FontFamily="Segoe UI Semibold" FontSize="36" ></TextBlock>
                        <Rectangle Width="50" Height="3" Fill="#8062FE" HorizontalAlignment="Left" Margin="5 10 0 0"/>
                    </StackPanel>
                </Grid>

                <!-- Nội dung trang -->
                <Grid Grid.Row="1" DataContext="{StaticResource UngVienVM}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <!-- Thanh chức năng -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" materialDesign:HintAssist.Hint="Tìm kiếm"
                                 Text="{Binding SearchUngVien, UpdateSourceTrigger=PropertyChanged}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding SearchCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                        <Button Grid.Column="1" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderBrush="{x:Null}" Background="#8062FE">
                            <Grid Width="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="3*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Image Stretch="None" Source="Resources\Icons\btnThem_white.png"></Image>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Tạo mới" HorizontalAlignment="Left" VerticalAlignment="Top" 
                                       FontSize="16" Margin="5,0,0,0" FontWeight="Normal" ></TextBlock>
                                </Grid>
                            </Grid>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding TaoMoiCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>

                    <!-- Danh sách ứng viên -->
                    <Grid Grid.Row="1">
                        <ListView Name="listUngVien"
                                  ItemsSource="{Binding ListUngVien}" 
                                  SelectedItem="{Binding SelectedUngVien, Mode=OneWayToSource}" Margin="0,10,0,0" FontSize="14">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding HienThiCommand}">
                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding MA_UV}" >
                                        <GridViewColumnHeader Tag="MA_UV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="ID" Width="80">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding HOTEN_UV}" >
                                        <GridViewColumnHeader Tag="HOTEN_UV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Họ tên" Width="220">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>

                                    <GridViewColumn DisplayMemberBinding="{Binding NGAYSINH_UV, StringFormat=dd/MM/yyyy}">
                                        <GridViewColumnHeader Tag="NGAYSINH_UV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Ngày sinh" Width="100">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding EMAIL_UV}">
                                        <GridViewColumnHeader Tag="EMAIL_UV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Email" Width="200">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding SODIENTHOAI_UV}">
                                        <GridViewColumnHeader Tag="SODIENTHOAI_NV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Số điện thoại" Width="130">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding DIACHI_UV}">
                                        <GridViewColumnHeader Tag="DIACHI_UV" 
                                                              Command="{Binding SortCommand}" 
                                                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}" 
                                                              VerticalAlignment="Center" Content="Địa chỉ" Width="150">
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>
            </Grid>


        </Grid>
    </Grid>
</Window>
