        Title="YOLOHR" Height="750" Width="1200" WindowStartupLocation="CenterScreen" Icon="Resources/Icons/logo_icon.png" Foreground="#FF232C3A">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- Menu area -->
