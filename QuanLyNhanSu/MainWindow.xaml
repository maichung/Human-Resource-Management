                                Phạm Phong Phú
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Left" Foreground="#FFB1B1B1">
                                Trưởng phòng nhân sự
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Menu chính -->
            <StackPanel Name="menuArea" Grid.Row="1" Width="230" HorizontalAlignment="center" VerticalAlignment="Top" Margin="0,20,0,0">
                <Button Name="btnTrangChu" Height="45" BorderBrush="{x:Null}" Background="#8062FE " Margin="0,5" >
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Foreground" Value="White"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChucNangKS}" Value="0">
                                    <Setter Property="Foreground" Value="White"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <!--<i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding btnTrangChuCommand}">
                            </i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>-->

                    <Grid Width="180">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Image Margin="7">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="Resources\Icons\btnTrangChu_white.png"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ChucNangKS}" Value="0">
                                                <Setter Property="Source" Value="Resources\Icons\btnTrangChu_white.png"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Grid>
                        <Grid Grid.Column="1">
