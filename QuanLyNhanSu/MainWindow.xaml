        <!-- Content area-->
        <Grid Grid.Column="1" Background="#FFFAFAFC">
            <Grid Name="gridTrangChu" Margin="30 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Tiêu đề trang -->
                <Grid Grid.Row="0">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Segoe UI Semibold" FontSize="36">
                    Trang chủ
                    </TextBlock>
                </Grid>
                <!-- Nội dung trang -->
                <Grid Grid.Row="1">
                    <WrapPanel Orientation="Horizontal">
                        <materialDesign:Card Width="250" Height="230" Margin="5,0,30,40" Padding="20" Foreground="White" Background="#FF8062FE">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock HorizontalAlignment="Center" Margin="0 5" FontSize="24" FontFamily="Segoe UI Semibold" TextAlignment="Center">
                                    Xin chào,<LineBreak></LineBreak> Phong Phú
                                </TextBlock>
                                <TextBlock HorizontalAlignment="Center" Margin="0 5" FontSize="18" TextAlignment="Center" TextWrapping="Wrap">
                                    Nắm bắt nhanh mọi thứ tại đây.
                                </TextBlock>
                                <Separator Style="{StaticResource MaterialDesignLightSeparator}" Margin="70 10" Background="White"/>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card Width="250" Height="230" Margin="5,0,30,40">
                            <StackPanel>
                                <!-- Màu thẻ -->
                                <Rectangle Height="3" Fill="#0A9F6B"></Rectangle>
                                <!-- Tiêu đề thẻ -->
                                <TextBlock HorizontalAlignment="Center" Margin="0 10" FontSize="18" Foreground="#FF404855" FontFamily="Segoe UI Semibold">
                                    Nghỉ phép của tôi
                                </TextBlock>
                                <Separator Style="{StaticResource MaterialDesignDarkSeparator}"/>
                                <!-- Nội dung thẻ -->
